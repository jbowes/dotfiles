[user]
    name = James Bowes
    email = jbowes@repl.ca
    user = jbowes

[core]
    commentchar = %

[alias]
    ci = commit -a
    co = checkout
    st = status
    praise = blame
    br = branch
    diffstat = diff --stat
    cat = !cat @
    ds = diff --stat
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    
    # branches that are merged locally already, note this includes master itself
    lurkers = !git branch --merged master | grep -v '^\\* master$'
    klurkers = !git lurkers | xargs -n1 git br -d

[apply]
    whitespace = warn

[diff]
    rename = copy 
    renamelimit = 600

[color]
    ui = true
